<Window x:Class="TutorialWPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TutorialWPFApp"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="None"
        ContentRendered="Window_ContentRendered"
        Title="Launcher" Height="1080" Width="1920">
    <Window.Resources>
        <Style x:Key="Early GameBoy">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Early GameBoy"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="Black"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="0,0,3,0"
                    BorderBrush="#777">
            <Grid Grid.Column="0" Background="Black" Margin="0,0,760,0">
                <TextBlock Text="Launcher" Foreground="White" FontSize="24" VerticalAlignment="Center"/>
            </Grid>
        </Border>
        <Grid Grid.Column="1" Background="Black" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <!-- Game Image -->
            <Grid Grid.Row="0" Background="Black">
                <Border BorderThickness="5"
                        BorderBrush="#FFF"
                        Margin="25">
                    <Image Source="/Images/Thumbnail.png" Stretch="UniformToFill"/>
                </Border>
            </Grid>
            <!-- Game Title -->
            <Grid Grid.Row="1" Background="Black">
                <TextBlock Text="Select A Game" Foreground="White" FontSize="48" Margin="50,25" VerticalAlignment="Center" Style="{StaticResource Early GameBoy}" TextWrapping="Wrap"/>
            </Grid>
            <!-- Game Description -->
            <Grid Grid.Row="2" Background="Black">
                <TextBlock Text="Select a game using the joystick and by pressing A." Foreground="White" FontSize="18" Margin="50" VerticalAlignment="Top" Style="{StaticResource Early GameBoy}" TextWrapping="Wrap"/>
            </Grid>
            <!-- Game Start/Update -->
            <Grid Grid.Row="3" Background="Black">
                <Button x:Name="StartButton" Content="Start" Click="StartButton_Click" FontSize="32" Margin="25" Style="{StaticResource Early GameBoy}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
